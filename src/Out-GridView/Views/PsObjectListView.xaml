<UserControl xmlns="https://github.com/avaloniaui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="300" x:Class="OutGridView.Views.PsObjectListView">
    <StackPanel>
        <TextBox Text="{Binding Filter}" />

        <UserControl Content="{Binding Criteria}"/>

        <DataGrid Name="DataGrid" Items="{Binding ViewItems, Mode=TwoWay}" CanUserReorderColumns="True" CanUserSortColumns="True" AutoGenerateColumns="True"/>

    </StackPanel>
</UserControl>  